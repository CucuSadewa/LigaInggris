<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="15dp"
    tools:context=".MainActivity"
    style="@style/Animation.AppCompat.Dialog">
    
    <ImageView
        android:id="@+id/img_team"
        android:layout_width="150dp"
        android:layout_height="165dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:scaleType="centerCrop"/>
    <TextView
        android:id="@+id/tv_nama_team"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:layout_toRightOf="@+id/img_team"
        android:layout_toEndOf="@+id/img_team"
        android:textColor="#000"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:maxLines="3"
        android:textSize="16dp"
        android:textStyle="bold"
        android:text="Nama Team"
        />
    <TextView
        android:id="@+id/tv_nama_pelatih"
        android:layout_margin="5dp"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_toEndOf="@+id/img_team"
        android:layout_toRightOf="@+id/img_team"
        android:layout_below="@+id/tv_nama_team"
        android:text="Nama Pelatuh"
        android:textSize="16sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/tv_nama_stadion"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_team"
        android:text="Nama Stadion"
        android:textStyle="bold"
        android:textSize="16sp"/>


</RelativeLayout>